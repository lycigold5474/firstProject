{{>layouts/header}}

{{#article}}
    <div id="formData" class="container">
        <input name="id" type="hidden" value="{{id}}" />
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="title" value="{{title}}">
        </div>
        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea class="form-control" rows="3" name="content">{{content}}</textarea>
        </div>
        <button type="button" class="btn btn-primary" onclick="saveJson()">저장</button>
        <a href="/articles/{{id}}">Back</a>
    </div>
{{/article}}

<script>

    function saveJson() {
      apiFetchPostJson('/articles/update',createJsonData(), (res)=>{console.log(res)});
    }

</script>

{{>layouts/footer}}